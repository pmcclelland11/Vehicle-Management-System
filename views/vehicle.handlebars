<main style="margin-bottom: 20px;">
    <section class="display-flex justify-between align-center">
        <div class="input-group">
            <input id="filter-input" style="margin-right: 10px;" placeholder="Search by Make or Type...">
            <button id="filter-button">Search</button>

        </div>
        <button id="add-vehicle-button" class="btn btn-primary">Add New Vehicle</button>
    </section>
    <br>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Mileage</th>
            <th>Type</th>
            <th>Price</th>
            <th>Status</th>
        </tr>
        {{#each vehicles}}
        <tr class="tableRow">
            <td>{{id}}</td>
            <td>{{make}}</td>
            <td>{{model}}</td>
            <td>{{year}}</td>
            <td>{{mileage}} miles</td>
            <td>{{type}}</td>
            <td>${{price}}</td>
            <td>{{#if isSold}} Sold {{else}} Available {{/if}}</td>
        </tr>
        {{/each}}
    </table>

    <section class="display-flex justify-center align-center mt-3">
        <button id="logout-button" class="btn btn-primary">Logout</button>
    </section>
</main>

<!-- Add New Vehicle Modal -->
<div id="add-vehicle-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2 id="add-vehicle-form">Add New Vehicle</h2>
        <!-- Form for adding a new vehicle -->
        <form id="add-vehicle-form">
            <div class="form-group">
                <label for="make">Make:</label>
                <input type="text" id="make" name="make" required>
            </div>
            <div class="form-group">
                <label for="model">Model:</label>
                <input type="text" id="model" name="model" required>
            </div>
            <div class="form-group">
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" required>
            </div>
            <div class="form-group">
                <label for="mileage">Mileage:</label>
                <input type="number" id="mileage" name="mileage" required>
            </div>
            <div class="form-group">
                <label for="type">Type:</label>
                <input type="text" id="type" name="type" required>
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" step="0.01" id="price" name="price" required>
            </div>
            <div class="form-group">
                <label for="isSold">Is Sold:</label>
                <input type="checkbox" id="isSold" name="isSold">
            </div>

            <button id="submit" type="submit">Submit</button>
        </form>
    </div>
</div>

<script src="/js/vehicles.js"></script>
<script src="/js/logout.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>




